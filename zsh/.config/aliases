# Edit and auto-reload aliases
alias edit-aliases="vim ~/.config/aliases && source ~/.config/aliases"

# Enable `sudo` to be used with aliases
alias sudo='sudo '

# Add `-a` flag to `ls`. This will show every file, including hidden ones
alias ls="ls -a"

# Use `exa`, a better `ls`
alias ll="exa --long --header --git --sort=type --all"

# `nvim` for the win
alias vim="nvim"

# Configuration shortcuts
alias zshrc="vim ~/.zshrc"
alias vimrc="vim ~/.config/nvim/"

# Stops Docker containers
alias docker-stop-all="((docker ps -q | xargs) | xargs docker stop) && docker ps"

alias upgrade-packages="sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup; npm install npm -g; npm update -g; sudo gem update --system; sudo gem update; sudo gem cleanup"
